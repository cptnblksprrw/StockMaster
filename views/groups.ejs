<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Groups</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <img src="/img/logo.png" alt="Logo" />
      <h1>StockMaster</h1>
    </header>
    <div class="main-container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/inventory">Items</a></li>
            <li><a href="#" id="openAddModal">Add Inventory</a></li>
            <li><a href="#" id="openScanModal">Scan Item</a></li>
            <li><a href="/about">About</a></li>
          </ul>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <h2>Groups</h2>

        <!-- Action Selection and Form -->
        <div class="actions mb-4">
          <label for="groupActionSelect">Action:</label>
          <select id="groupActionSelect" name="action">
            <option value="">Select an Action</option>
            <option value="deleteGroup">Delete Group</option>
            <option value="editGroup">Edit Group</option>
            <option value="viewItems">View Items</option>
          </select>
          <button id="applyGroupAction" class="btn btn-primary">Apply</button>
        </div>

        <!-- Group Table -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Group Name</th>
              <th>Number of Items</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% if (groups && groups.length > 0) { %>
              <% groups.forEach(group => { %>
              <tr>
                <td><%= group.name %></td>
                <td><%= group.items.length %></td>
                <td>
                  <a href="/group/<%= group._id %>" class="btn btn-info">View Details</a>
                </td>
              </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3">No groups available.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </main>
    </div>

    <!-- Add Inventory Modal -->
    <div id="addInventoryModal" class="modal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <span id="closeAddModal" class="close">&times;</span>
          <h2>Add Inventory</h2>
          <form action="/add-item" method="POST">
            <label for="name">Item Name:</label>
            <input type="text" id="name" name="name" required />

            <label for="quantity">Quantity:</label>
            <input type="number" id="quantity" name="quantity" required />

            <label for="category">Category:</label>
            <input type="text" id="category" name="category" required />

            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="4" required></textarea>

            <button type="submit" class="btn btn-success">Add Item</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Scan Item Modal -->
    <div id="scanItemModal" class="modal">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <span id="closeScanModal" class="close">&times;</span>
          <h2>Scan Item</h2>
          <form id="scanForm" action="/scan-item" method="POST">
            <label for="barcode">Scan Barcode:</label>
            <input
              type="text"
              id="barcode"
              name="barcode"
              placeholder="Scan barcode here"
              required
              autofocus
            />
          </form>
        </div>
      </div>
    </div>

    <script src="js/inventory-handlers.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
