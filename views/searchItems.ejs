<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inventory</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <img src="/img/logo.png" />
      <h1>StockMaster</h1>
    </header>
    <div class="main-container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <nav>
          <ul>
            <li><a href="/inventory">Inventory</a></li>
            <li><a href="/groups">Groups</a></li>
            <li><a href="#" id="openAddModal">Add Inventory</a></li>
            <li><a href="#" id="openScanModal">Scan Item</a></li>
          </ul>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <h2>Inventory</h2>
        <!-- Action Selection and Form -->
        <div class="actions">
          <label for="actionSelect">Action:</label>
          <select id="actionSelect" name="action">
            <option value="">Select an Action</option>
            <option value="createGroup">Create Group</option>
            <option value="deleteSelected">Delete Selected</option>
            <option value="printBarcode">Print Barcode</option>
            <!-- Add more actions if needed -->
          </select>
          <button id="applyAction" class="btn btn-primary">Apply</button>
        </div>

        <div class="search">
          <form action="/search" method="GET">
            <input
              type="text"
              name="query"
              placeholder="Search items..."
              required
            />
            <button type="submit">Search</button>
          </form>
          <button  class = "btn" action="/inventory">Reset</button>
        </div>

        <!-- Add Inventory Modal -->
        <div id="addInventoryModal" class="modal">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <span id="closeAddModal" class="close">&times;</span>
              <h2>Add Inventory</h2>
              <form action="/add-item" method="POST">
                <label for="name">Item Name:</label>
                <input type="text" id="name" name="name" required />

                <label for="quantity">Quantity:</label>
                <input type="number" id="quantity" name="quantity" required />

                <label for="category">Category:</label>
                <input type="text" id="category" name="category" required />

                <label for="description">Description:</label>
                <textarea
                  id="description"
                  name="description"
                  rows="4"
                  required
                ></textarea>

                <!-- Image Upload Field -->
                <label for="image">Item Picture (Optional):</label>
                <input type="file" id="image" name="image" accept="image/*" />

                <button type="submit">Add Item</button>
              </form>
            </div>
          </div>
        </div>

        <!-- Scan Item Modal -->
        <div id="scanItemModal" class="modal">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <span id="closeScanModal" class="close">&times;</span>
              <h2>Scan Item</h2>
              <form id="scanForm" action="/scan-item" method="POST">
                <label for="barcode">Scan Barcode:</label>
                <input
                  type="text"
                  id="barcode"
                  name="barcode"
                  placeholder="Scan barcode here"
                  required
                  autofocus
                />
              </form>
            </div>
          </div>
        </div>

        <!-- Item List -->
        <div id="itemList" class="inventory-section">
          <h3>Items</h3>
          <table>
            <thead>
              <tr>
                <th><input type="checkbox" id="select-all" /></th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Barcode</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <% if (results.length > 0) { %> <% results.forEach(item => { %>
              <tr>
                <td>
                  <input
                    type="checkbox"
                    class="item-checkbox"
                    name="selectedItems"
                    value="<%= item._id %>"
                  />
                </td>
                <td><%= item.name %></td>
                <td><%= item.quantity %></td>
                <td><%= item.barcode %></td>
                <td><a href="/item/<%= item._id %>">View Details</a></td>
              </tr>
              <% }) %>
            </tbody>
            <% } else { %>
            <p>No items found.</p>
            <% } %>
          </table>
        </div>
      </main>
    </div>
    <script src="js/inventory-handlers.js"></script>
    <script src="https://qajavascriptsdktests.azurewebsites.net/JavaScript/dymo.connect.framework.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
