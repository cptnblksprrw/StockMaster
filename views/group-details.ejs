<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Group Details</title>
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>
  <body>
    <header>
      <h1>Group Details</h1>
    </header>
    <main class="main-content">
      <h2><%= group.name %></h2>
      <p><strong>Barcode:</strong> <%= group.barcode %></p>

      <h3>Items in Group</h3>
      <ul>
        <% group.items.forEach(item => { %>
        <li>
          <strong><%= item.name %></strong>
          (Description: <%= item.description %>, Quantity: <%= item.quantity %>)
        </li>
        <% }) %>
      </ul>

      <!-- Delete Group Button -->
      <form action="/delete-group/<%= group._id %>" method="POST">
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this group? This will not delete the items.')"
        >
          Delete Group
        </button>
      </form>
      <a href="/inventory">Back to Inventory</a>
    </main>
  </body>
</html>
