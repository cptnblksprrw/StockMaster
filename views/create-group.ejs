<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Details</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <header>
      <div class="header-left">
        <img src="/img/logo.png" alt="Logo" />
        <h1>StockMaster</h1>
      </div>
      <nav class="header-middle">
        <a href="/">Home</a>
        <a href="/reports">Reports</a>
        <a href="/support">Support</a>
      </nav>
      <div class="header-right">
        <button class="barcode-button" id="openScanModal">Scan Barcode</button>
        <button class="add-button" id="openAddModal">Add Inventory</button>
      </div>
    </header>
    <div class="main-container">
      <!-- Sidebar -->
      <aside class="sidebar">
        <nav>
          <ul>
            <li><a href="/inventory">Inventory</a></li>
            <li><a href="/groups">Orders</a></li>
            <!--<li><a href="#" id="openAddModal">Add Inventory</a></li>
            <li><a href="#" id="openScanModal">Scan Item</a></li>-->
          </ul>
        </nav>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <div class="container">
            <form action="/create-group" method="POST">
                <div>
                    <label for="groupName">Group Name:</label>
                    <input type="text" id="groupName" name="groupName" required>
                </div>
    
                <h3>Items to Add to the Group</h3>
                <ul>
                    <% items.forEach(item => { %>
                        <li>
                            <input type="checkbox" name="selectedItems" value="<%= item._id %>" checked>
                            <%= item.name %> (Quantity: <%= item.quantity %>, Barcode: <%= item.barcode %>)
                        </li>
                    <% }) %>
                </ul>
    
                <button type="submit">Create Group</button>
            </form>
    
            <a href="/inventory">Back to Inventory</a>

      </main>
    </div>
    <script src="js/inventory-handlers.js"></script>
    <script src="https://qajavascriptsdktests.azurewebsites.net/JavaScript/dymo.connect.framework.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
